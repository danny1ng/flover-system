generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Store {
  id        Int     @default(autoincrement()) @id
  name      String
  users     User[]  @relation(references: [id])
}

model User {
  id       Int     @default(autoincrement()) @id
  password String  @default("")
  name     String? @unique
  stores   Store[] @relation(references: [id])
  role     Role    @default(SALLER)
}

enum Role {
  ADMIN
  SALLER
}