generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Store {
  id        Int     @default(autoincrement()) @id
  name     String
  users     User[]
}

model User {
  id       Int     @default(autoincrement()) @id
  email    String  @unique
  password String  @default("")
  name     String?
  stores   Store[]
  role     Role    @default(SALLER)
}

enum Role {
  ADMIN
  SALLER
}